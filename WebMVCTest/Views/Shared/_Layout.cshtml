<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebMVCTest</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebMVCTest.styles.css" asp-append-version="true" />

    <!-- Font Awesome para los iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- IMPORTANTE: Esta línea renderiza los estilos personalizados de las vistas -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebMVCTest</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <!-- QR SCANNER -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="qrDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-qrcode me-1"></i> QR Scanner
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="qrDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Qr" asp-action="Index">
                                        <i class="fas fa-upload me-1"></i> Subir Imagen
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Qr" asp-action="Scanner">
                                        <i class="fas fa-camera me-1"></i> Usar Cámara
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <!-- RECONOCIMIENTO FACIAL -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="faceDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-check me-1"></i> Reconocimiento Facial
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="faceDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Face" asp-action="Index">
                                        <i class="fas fa-home me-1"></i> Inicio
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Face" asp-action="Detection">
                                        <i class="fas fa-camera me-1"></i> Detección en Vivo
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Face" asp-action="Recognition">
                                        <i class="fas fa-users me-1"></i> Reconocimiento
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Face" asp-action="Upload">
                                        <i class="fas fa-upload me-1"></i> Analizar Imagen
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Face" asp-action="Statistics">
                                        <i class="fas fa-chart-bar me-1"></i> Estadísticas
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <!-- CRÍTICO: Esta línea renderiza el contenido de cada vista -->
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WebMVCTest - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- IMPORTANTE: Esta línea renderiza los scripts personalizados de las vistas -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>