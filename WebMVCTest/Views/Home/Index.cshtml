@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<!-- Nueva sección de QR Scanner -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h3><i class="fas fa-qrcode me-2"></i>Escáner de Códigos QR</h3>
                </div>
                <div class="card-body">
                    <p class="text-center text-muted">Escanea códigos QR de forma rápida y sencilla</p>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="d-grid">
                                <a href="@Url.Action("Index", "Qr")" class="btn btn-outline-primary btn-lg">
                                    <i class="fas fa-upload fa-2x d-block mb-2"></i>
                                    <strong>Subir Imagen</strong>
                                    <small class="d-block">Sube una imagen con código QR</small>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="d-grid">
                                <a href="@Url.Action("Scanner", "Qr")" class="btn btn-outline-success btn-lg">
                                    <i class="fas fa-camera fa-2x d-block mb-2"></i>
                                    <strong>Usar Cámara</strong>
                                    <small class="d-block">Escanea en tiempo real</small>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="text-center mt-3">
                        <small class="text-muted">
                            Soporta códigos QR, Data Matrix, Aztec y PDF417
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
